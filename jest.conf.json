{
  "bail": true,
  "verbose": true,
  "collectCoverageFrom": [
    "app/components/**/*.js",
    "app/view*/**/*.js",
    "!**/node_modules/**",
    "!**/app/bower_components/**"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/jest.context.js",
  "testEnvironment": "jsdom",
  "testRegex": "(/__tests__/.*|\\_(test|spec))\\.(js)$"
}
